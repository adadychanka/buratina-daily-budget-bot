# Development Environment Configuration
# Copy this file to .env.development and fill in your values

# Telegram Bot Configuration
# Create a test bot via @BotFather for development
BOT_TOKEN=your_development_bot_token_here

# Database Configuration
# For local development, you can use SQLite or PostgreSQL
DATABASE_URL="file:./dev.db"
# Or use PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/daily_budget_dev"

# Google Sheets Configuration
# Use a separate test Google Sheet for development
GOOGLE_SHEETS_ID=your_development_google_sheet_id_here
GOOGLE_SHEETS_RANGE=Sheet1!A:J

# Google Service Account Credentials
# Use file path for local development
GOOGLE_CREDENTIALS_PATH=./src/services/credentials/service-account-key.json

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug
