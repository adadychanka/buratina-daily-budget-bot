# Production Environment Configuration
# Copy this file to .env.production and fill in your values
# For Railway deployment, set these in Railway dashboard instead

# Telegram Bot Configuration
# Use your production bot token
BOT_TOKEN=your_production_bot_token_here

# Database Configuration
# For Railway: DATABASE_URL is automatically set when PostgreSQL is added
# For manual setup: DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Google Sheets Configuration
# Use your production Google Sheet
GOOGLE_SHEETS_ID=your_production_google_sheet_id_here
GOOGLE_SHEETS_RANGE=Sheet1!A:J

# Google Service Account Credentials
# For Railway: use GOOGLE_CREDENTIALS_JSON (single-line JSON string)
# For local production testing: use GOOGLE_CREDENTIALS_PATH
GOOGLE_CREDENTIALS_JSON={"type":"service_account",...}
# OR
# GOOGLE_CREDENTIALS_PATH=./src/services/credentials/service-account-key.json

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
