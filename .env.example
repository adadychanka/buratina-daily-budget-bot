# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
# For production with PostgreSQL (Railway):
# DATABASE_URL will be automatically set by Railway when PostgreSQL is added
# Or set manually: DATABASE_URL="postgresql://user:password@host:port/database?schema=public"
# For local development with SQLite (if needed):
# DATABASE_URL="file:./dev.db"

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your_google_sheet_id_here
GOOGLE_SHEETS_RANGE=Sheet1!A:J

# Google Service Account Credentials
# Option 1: Local development - use file path
GOOGLE_CREDENTIALS_PATH=./src/services/credentials/service-account-key.json

# Option 2: Production (Railway) - use JSON string (one line, no newlines)
# Convert your service-account-key.json to a single line JSON string

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
