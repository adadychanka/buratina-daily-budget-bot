# Telegram Bot
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here

# Google Sheets Integration
# Google Sheet ID can be found in the URL: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
GOOGLE_SHEETS_ID=your_google_sheet_id_here
# Sheet range for appending data (default: Sheet1!A:J)
# Note: Actual data spans 12 columns (A-L), but range A:J is sufficient for append operation
GOOGLE_SHEETS_RANGE=Sheet1!A:J
# Path to Service Account JSON key file (relative to project root)
# Place your service account key in src/services/credentials/ directory
GOOGLE_CREDENTIALS_PATH=./src/services/credentials/service-account-key.json

# Database
# SQLite database file path (for development)
# For production, use PostgreSQL connection string: postgresql://user:password@host:5432/dbname
DATABASE_URL="file:./dev.db"

# App Configuration
# Environment: development, production, or test
NODE_ENV=development
# Logging level: error, warn, info, or debug
LOG_LEVEL=info
